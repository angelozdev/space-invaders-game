body
   margin: 0
   padding: 0
   min-height: 100vh
   background: #f2f2f2
   font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif

.container
   padding: 3rem 0
   border-bottom: 1px solid grey

.wrapper
   width: 100%
   max-width: 300px
   margin-right: auto
   margin-left: auto

.grid
   display: grid
   width: 300px
   height: 300px
   grid-template-columns: repeat(15, 1fr)
   grid-template-rows: repeat(15, 1fr)
   border: 1px solid grey

.shooter
   background: brown

.invader
   background: rebeccapurple
   border-radius: 50%

.boom
   background: red

.laser
   background: black
